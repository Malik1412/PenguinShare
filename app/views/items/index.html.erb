<%= form_for(@additem) do |f| %>
			  
			  
			  <%= f.label :Item_name %>
			  <%= f.text_field :name %><br>

			  <%= f.label :Category %>
			  <%= f.text_field :category %><br>

			  <%= f.label :Description %>
			  <%= f.text_field :description %><br>

			  <%= f.label :Delivery %>
			  <%= f.label :Courier %>
			  <%= f.check_box :delivery, {}, "courier" %>
				<%= f.label :MeetUp %>
			  <%= f.check_box :delivery, {}, "meetup" %><br>

			  <%= f.label :Location %>
			  <%= f.text_field :location %><br>

			  <%= f.label :Price_base %>
			  <%= f.text_field :pricebase %><br>

			  <%= f.label :Price %>
			  <%= f.text_field :price %><br>

			  <%= f.label :Refundable_deposit %>
			  <%= f.text_field :deposit %><br>

			  <%= f.label :Period %>
			  <%= f.text_field :period %><br>

			  <%= f.submit %>
<% end %>